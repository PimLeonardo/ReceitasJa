<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activity.EditarPerfilActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagePerfilFotoEditar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/textAlterarFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alterar foto"
            android:padding="6dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nomeEditarperfil"
            style="@style/EditText"
            android:text="Nome do usuário"
            android:drawableRight="@drawable/ic_person"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editUsuarioEditarPerfil"
            style="@style/EditText"
            android:hint="Novo nome do usuário"
            android:drawableRight="@drawable/ic_refresh"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/emailEditarPerfil"
            style="@style/EditText"
            android:text="Email do usuário"
            android:drawableRight="@drawable/ic_email"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonSalvarEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_botao_perfil"
            android:text="Salvar alterações"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>