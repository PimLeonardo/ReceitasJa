<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagePerfil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:layout_weight="0"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/textNome"
                style="@style/TextNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Nome" />

            <TextView
                android:id="@+id/textData"
                style="@style/TextData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTituloReceita"
                style="@style/TextTitulo"
                android:gravity="center"
                android:text="Nome da receita" />

            <ImageView
                android:id="@+id/imagePost"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/textPostagem"
                style="@style/TextPost"
                android:text="Ingredientes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonFavorito"
                android:background="@drawable/background_botao_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:textSize="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_favorite_off"
                android:text="Favoritar" />

            <Button
                android:id="@+id/buttonComentar"
                android:background="@drawable/background_botao_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:textSize="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_comentario_branco"
                android:text="Comentar" />

            <Button
                android:id="@+id/buttonAdicionar"
                android:background="@drawable/background_botao_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:textSize="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_add_branco"
                android:text="Adicionar" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
